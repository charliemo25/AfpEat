@model AfpEat.Models.Utilisateur

@{
    ViewBag.Title = "Create";
}

<section id="CreerCompte" class="container">
    <div class="row">
        <div class="col-12 p-3">
            <h2 class="text-left">Créer un compte</h2>
        </div>
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="card bg-light">
                    <article class="card-body" style="max-width: 400px;">
                        <h4 class="card-title mt-3 text-center">Ajouter un utilisateur</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <!-- Nom -->
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width:45px;"><i class="fas fa-user"></i></span>
                            </div>

                            @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nom" } })
                        </div>
                        <div class="form-group">
                            @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
                        </div>

                        <!-- Prenom -->
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width:45px;"><i class="fas fa-user"></i></span>
                            </div>
                            @Html.EditorFor(model => model.Prenom, new { htmlAttributes = new { @class = "form-control", @placeholder = "Prénom" } })
                        </div>
                        <div class="form-group">
                            @Html.ValidationMessageFor(model => model.Prenom, "", new { @class = "text-danger" })
                        </div>

                        <!-- Matricule -->
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width:45px;"><i class="fas fa-user-shield"></i></span>
                            </div>
                            @Html.EditorFor(model => model.Matricule, new { htmlAttributes = new { @class = "form-control", @placeholder = "Matricule" } })
                        </div>
                        <div class="form-group">
                            @Html.ValidationMessageFor(model => model.Matricule, "", new { @class = "text-danger" })
                        </div>

                        <!-- Mot de passe -->
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width:45px;"><i class="fa fa-lock"></i></span>
                            </div>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mot de Passe" } })
                        </div>
                        <div class="form-group">
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group input-group">
                            <button type="submit" class="btn btn-success btn-block">Créer</button>
                        </div>
                    </article>
                </div>
                <div class="d-flex justify-content-end my-3">
                    <a href="@Url.Action("Index", "Utilisateurs")" title="Retour" class="btn btn-primary"><i class="fa fa-chevron-circle-left"></i> Retour </a>
                </div>
            }
        </div>
        
    </div>
</section>





<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

